		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-netlify": "^4.4.1",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/find-config": "^1.0.4",
		"@types/node": "^22.12.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"autoprefixer": "^10.4.20",
		"dotenv": "^16.6.1",
		"eslint": "^9.7.0",
