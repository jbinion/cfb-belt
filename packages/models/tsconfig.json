{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2021",
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "dist",
		"declarationDir": "dist/types",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
